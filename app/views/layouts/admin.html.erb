<head> 
  <meta http-equiv="content-type" content="text/html; charset=utf-8"> 
  <title>颗米软件</title> 
 
  <%= javascript_include_tag "jquery.min.js" %>
  <%= stylesheet_link_tag "login","MyFacebookStyleSidebar" %>	
 
  <style>
		<%= yield:panel_css %>
  </style>
  
  <link rel="shortcut icon" href="/images/logoHead.png" /> 
  
  <% javascript_tag do %>
  	<% if flash[:notice] %>
	  	$(document).ready(function(){
				fadein();
				fadeout();
			
		});
	<% end %>	
  
  	function fadein(){
		$('.message').fadeIn(800);
	}
  
  	function fadeout(){
		$('.message').fadeOut(2500);
	}
  
  <% end %>
  
	<script type="text/javascript">
  		<%= yield:panel_js %>
	</script>	
 
	<script type="text/javascript">
  		var _gaq = _gaq || [];
  	_gaq.push(['_setAccount', 'UA-36330309-1']);
  	_gaq.push(['_trackPageview']);
  	(function() {
   	 var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    	ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    	var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
 	 })();

	</script> 
 
</head> 

<body> 

<!-- 页头部分 -->
  <div id="header"> 
    <div class="container"> 
	
      <div class="left_wrapper"> 
        <div id="site_name"> 
          <a href="/" class="logo">颗米</a> 
        </div> 
      </div> 
	  
      <div class="sidebar"> 
        <div id="user_bar"> 
			<% if !session[:user] %>
				<a href="/byself">随便看看</a> 
				<a href="/admin">登陆</a>
	        <!--    <a href="/admin/register">注册</a>  -->
			<% end %>
			<% if session[:user] %>
	            <a href="/">首页</a> 
				<a href="/admin/setup"><%= session[:user].username %></a>
				<a href="/admin/setup">设置 </a>
				<a href="/admin/logout">注销</a>
			<% end %>
        </div> 
      </div> 
	  
    </div> 
  </div> 
  
  <!-- 消息通知 starting -->
  <% if flash[:notice] %>
		<div class="message">
			<%= flash[:notice]%>
		</div>
  <% end %>
  <!-- 消息通知 end -->
  
  <!-- 页面主体内容区域 开始 -->
  <div id="main"> 
    <div class="container"> 
	  <%= yield %>
    </div> 
  </div> 
  <!-- 页面主体内容区域 结束 -->
 
  <!-- 页脚部分  -->
  <div id="footer"> 
    <div class="container"> 
      <div class="inner"> 
        <div class="links"> 
          <a href="/about">关于颗米</a> • 
          <a href="http://ikermi.com/blog" target="_blank">博客</a> •
        <!--  <a href="/admin/register">如何注册</a> •  -->
          <a href="mailto:training.gy@gmail.com">反馈</a> 
        </div> 
        <div class="copyright"> 
          	颗米&nbsp;&copy;&nbsp;2012 - WEB软件开发
        </div> 
      </div> 
	  
    </div> 
  </div> 
  <!-- 页脚部分 结束  -->
  
